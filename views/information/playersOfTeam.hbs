<link rel="stylesheet" href="/CSS/information.css">
<div class="con">
    <div class="title">
        Danh sách cầu thủ
    </div>
    <table class="table scrolldown">
        <thead>
            <tr>
                <th scope="col">Mã Cầu Thủ</th>
                <th scope="col"> Cầu thủ</th>
                <th scope="col">Vị trí cầu thủ</th>
                <th scope="col">Số bàn thắng</th>
                <th scope="col">Loại cầu thủ</th>
            </tr>
        </thead>
        <tbody>
            {{#each CauThu}}
            <tr>
                <th scope="row">{{MaCauThu}}</th>
                <td>{{TenCauThu}}</td>
                <td>{{LoaiCauThu}}</td>
                <td>{{SoBanThang}}</td>
                <td> {{#if NgoaiQuoc}} Nước ngoài {{else}} Trong nước {{/if}}
            </tr>
           {{/each}}

        </tbody>
    </table>

</div>

<style>
    .table {
  
        font-size: 1.5vw;
        width: 80%;
        height: 80%;
        margin: auto;
        margin-top: 3%;
        margin-bottom: 3%;
        border-collapse: separate;
        border-spacing: 0.5vw;

    }

    /* To display the block as level element */
    table.scrolldown tbody,
    table.scrolldown thead {
        display: block;
    }


    table.scrolldown tbody {

        /* Set the height of table body */
        height: 80%;

        /* Set vertical scroll */
        overflow-y: auto;

        /* Hide the horizontal scroll */
        overflow-x: hidden;
    }

    thead tr {
        padding-right: 1.15%;
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
         background-color: #D9D9D9;
      
    }

    tbody tr {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
        background-color: #D9D9D9;
        margin-top:1% ;
    }

    tr th,tr td{
        text-align: center;
        width: 15%;
    }

</style>