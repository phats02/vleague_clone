<link rel="stylesheet" href="/CSS/admin.css">
<div class="con">
    <div class="title">
        Bảng Xếp Hạng
    </div>
    <table class="table scrolldown table-borderless">
        <thead>
            <tr>
                <th scope="col">Hạng</th>
                <th scope="col" class="team" style="text-align: center;"> Đội</th>
                <th scope="col">Thắng</th>
                <th scope="col">Hòa</th>
                <th scope="col">Thua</th>
                <th scope="col">Hiệu số</th>
            </tr>
        </thead>
        <tbody>
            {{#each rank}}
            <tr>
                <th scope="row">{{Rank}}</th>
                <td class="team"> <img src="../Logo/{{MaDoi}}.png" alt="">{{TenDoi}}</td>
                <td>{{SoTranThang}}</td>
                <td>{{SoTranHoa}}</td>
                <td>{{SoTranThua}}</td>
                <td>{{HieuSo}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <div class="row" style="width:100%; margin-top:2%; margin-bottom:2%"><button style="margin:auto" type=""
            class="btn btn-primary redbtn" id="ConBut" >Xác nhận</button>
    </div>
</div>
<script>
    $(function(){
        $("#ConBut").click(function(){
            window.location.href="/admin"
        })
    })
</script>
<style>
    .title{
        margin-top:0.5% ;
    }
    .con {
        width: 90%;
        overflow: unset;
    }

    .table {
  
        font-size: 1.5vw;
        width: 70%;
        height: 80%;
        margin: auto;
        margin-top: 3%;
        margin-bottom: 3%;
        border-collapse: separate;
        border-spacing: 0.5vw;

    }

    /* To display the block as level element */
    table.scrolldown tbody,
    table.scrolldown thead {
        display: block;
    }


    table.scrolldown tbody {

        /* Set the height of table body */
        height: 80%;

        /* Set vertical scroll */
        overflow-y: auto;

        /* Hide the horizontal scroll */
        overflow-x: hidden;
    }

    thead tr {
        padding-right: 1.15%;
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
         background-color: #EB6440;
       border-radius: 25px 25px 0px 0px;
      
    }

    tbody tr {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
        background-color: #D9D9D9;
        margin-top:1% ;
    }

     tr th{
        text-align: center;
        width: 12%;
    }

    tr td{
        text-align: center;
        width: 12%;
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: center;
    }

    .team{
        text-align: start;
        width: 35%;
         justify-content: start;
    }

    img{
        width: 15%;
        height: 100%;
        margin-right: 5%;
    }
    .redbtn {
        background: linear-gradient(180deg, #D9D9D9 0%, #E05A4D 15.62%, #E32B19 86.46%, #D9D9D9 100%);
        border: 1px solid #000000;
        box-shadow: 4px 4px 4px rgb(0 0 0 / 25%);
        border-radius: 15px;
        width: 10%;
        color: black;
    }

    button {
        position: relative;
        width: fit-content;
        height: fit-content;
    }

</style>