<form  method="POST" action="/{{currentURl}}" class="con" id="RuleForm">
    <div class="header"> Thay đổi quy định</div>
    <div class="con1">
        <div>Cầu thủ: </div>
        <div class="form-group">
            <label for=""> Tuổi tối thiểu: </label>
            <input type="number" name="TuoiToiThieu" value="{{THAMSO.TuoiToiThieu}}" class="form-control" min="0" required
            id="TuoiToiThieu">
        </div>
        <div class="form-group">
            <label for=""> Tuổi tối đa: </label>
            <input type="number" name="TuoiToiDa" value="{{THAMSO.TuoiToiDa}}" class="form-control " required id="TuoiToiDa">
        </div>
    </div>
    <div class="con1">
        <div>Đội: </div>
        <div class="form-group">
            <label for=""> Số cầu thủ tối thiểu: </label>
            <input type="number" name="SoCauthutoiThieu" value="{{THAMSO.SoCauthutoiThieu}}" class="form-control"
                required id="SoCauThuToiThieu" min="0">
        </div>
        <div class="form-group">
            <label for=""> Số cầu thủ tối đa: </label>
            <input type="number" name="SoCauThuToiDa" value="{{THAMSO.SoCauThuToiDa}}" class="form-control " required
            id="SoCauThuToiDa" min="0">
        </div>
        <div class="form-group">
            <label for=""> Số cầu thủ nước ngoài tối đa: </label>
            <input type="number" name="SoCauThuNuocNgoaiToiDa" value="{{THAMSO.SoCauThuNuocNgoaiToiDa}}"
                class="form-control " required min="0">
        </div>
    </div>
    <div class="con1">
        <div>Bàn thắng: </div>
        <div class="form-group">
            <label for=""> Thời điểm ghi bàn tối đa: </label>
            <input type="number" name="TDGhiBanToiDa" value="{{THAMSO.TDGhiBanToiDa}}" class="form-control " min="0" required>
        </div>
         <div class="form-group" hidden>
            <label for=""> Thời điểm ghi bàn tối thiểu: </label>
            <input type="number" name="TDGhiBanToithieu" value="{{THAMSO.TDGhiBanToithieu}}" class="form-control ">
        </div>
    </div>
    <div class="con1">
        <div class="form-group" style="margin-bottom:2%">
            <div>Chỉnh sửa loại bàn thắng</div>
            <div><button type="button" class="btn  btn-danger" id="addLoaiBanThang">➕</button></div>
        </div>
        <div class="column content" style="margin-bottom:2%">
            {{#each LOAIBANTHANG}}
            <div class="form-group">
                <input type="text" name="BanThang-{{this.MaLoaiBanThang}}" value="{{this.TenLoaiBanThang}}"
                    class="form-control" style="width:50%; margin-top:2%; margin-bottom:2%" readonly>
                <div><button type="button" class="btn  btn-danger delete-Loai"
                        id="delete-Loai-{{this.MaLoaiBanThang}}">X</button></div>
            </div>
            {{/each}}

        </div>
    </div>
    <div class="con1">
        <div>Xếp hạng: </div>
        <div class="form-group">
            <label for=""> Điểm thắng: </label>
            <input type="number" name="DiemBanThang" value="{{THAMSO.DiemBanThang}}" class="form-control " required
            id="DiemThang" >
        </div>
        <div class="form-group">
            <label for=""> Điểm hòa: </label>
            <input type="number" name="DiemBanHoa" value="{{THAMSO.DiemBanHoa}}" class="form-control " required
            id="DiemHoa">
        </div>
        <div class="form-group">
            <label for=""> Điểm thua: </label>
            <input type="number" name="DiemBanThua" value="{{THAMSO.DiemBanThua}}" class="form-control " required
            id="DiemThua">
        </div>
    </div>
    <div class="con1" id="errors"></div>
    <div class="row" style="width:100%; margin-top:2%; margin-bottom:2%"><button style="margin:auto" type="submit"
            class="btn btn-primary redbtn">Gửi</button>
    </div>
</form>
