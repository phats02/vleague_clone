<script>
    function ruleValidate(){
        if($("#TuoiToiThieu").val()>$("#TuoiToiDa").val()){
            return false;
        }   
        if($("#SoCauThuToiThieu").val()>$("#SoCauThuToiDa").val()){
            return false;
        }
        if($("#DiemThang").val()<$("#DiemThua").val() || $("#DiemThang").val()<$("#DiemHoa").val() || $("#DiemHoa").val()<$("#DiemThua").val() ){
            return false;
        }
        return true;
    }
    function color() {
        $(".form-group:even").css("background-color", "#949494")
    }
    $(document).ready(async function () {
        console.log($("#TuoiToiDa"))
         $("#RuleForm").submit(function(e){
            if(!ruleValidate()){
            e.preventDefault();
            $("#errors").append(`
                Thông tin nhập không đúng quy định! `)
            }
         });
        color()
        var i = 1
        $('#addLoaiBanThang').click(() => {
            color()
            $(".content").append(`
        <div class="form-group">
                <input type="text" name="newBanThang" class="form-control" style="width:50%; margin-top:2%; margin-bottom:2%" placeholder="Ten loai ban thang" id="valueLoaiBanThang-${i}" required>
                <div><button type="button" class="btn  btn-success delete-Loai"
                        id="addLoaiBanThang-${i}">✔️</button></div>
            </div>
        <script>
            $(\`#addLoaiBanThang-${i}\`).click(() => {
                $.post("/admin/createLoaiBanThang?name="+$(\`#valueLoaiBanThang-${i}\`).val(),(status)=>{
                    if (status ==-1){
                        alert('Ten Loai Ban Thang Da Ton Tai')
                    }
                    else {
                         location.reload();
                    }
                })
        })
        <\/script>`)
            i++
        })
        $(".delete-Loai").click((e) => {
            var id = event.srcElement.id.split('-')[2]
            console.log(id)
            $.post('/admin/deleteLoaiBanThang/' + id, (status) => {
                if (status == -1) {
                    alert('Khong the xoa Loai ban thang')
                }
                else {
                    location.reload();
                }
            })
        })
    });
</script>